	pageEncoding="UTF-8"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<script src="http://code.jquery.com/jquery-1.9.1.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/3.0.1/handlebars.js"></script>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>댓글</title>
<link rel = "stylesheet" href = "../resources/home.css">
</head>
<body>
	<h1>[댓글]</h1>
	<div id = "divInsert">
		<input type = "text" id = "txtReply" size = 50>
		<input type = "button" id = "btnReply" value = "등록">
	</div>
	<span id = "total"></span>
	<hr>
	<div id = "divReply"></div>
	<script id = "temp" type = "text/x-handlebars-template">
		 {{#each list}}
			<div rno="{{rno}}">
        	    {{rno}}:{{reply}}
        	    <span>{{replyer}}</span>
        	    <span>{{updateDate}}</span>
				<button class = "btnDelete">삭제</button>
			</div>
			<hr>
     	 {{/each}}
	</script>
	<div id = "pagination">
		
	</div>
</body>
<script>
	var page = 1;
	var bno = 200;
	getList();
	function getList() {
		$.ajax({
			type : "get",
			url : "/reply/list",
			data : {"page" : page, "bno" : bno},
			dataType : "json",
			success : function(data) {
				var temp = Handlebars.compile($("#temp").html());
				$("#divReply").html(temp(data));
				$("#total").html("<h3>댓글 수 : " + data.maker.totalCount + "</h3>");
				var pg = "";
				var temp = data.maker.totalCount % data.maker.perPageNum;
				var last = temp == 0 ? data.maker.totalCount / data.maker.perPageNum : data.maker.totalCount / data.maker.perPageNum + 1;
				if (data.maker.prev) {
					pg += "<a href = '" + (data.maker.startPage - 1) + "'>←</a>";
				} 
				for (var i = data.maker.startPage; i <= last; i++) {
					if (page == i) {
						pg += "[<a href = '" + i +"' class = 'active'>" + i + "</a>]";
					} else {
						pg += "[<a href = '" + i +"'>" + i + "</a>]";
					}
				}
				if (data.maker.next) {
					pg += "<a href = '" + (data.maker.endPage) + "'>→</a>";
				}
				$("#pagination").html(pg);
			}
		});
	}
	$("#pagination .active").on("click", function(){
		alert("!");
	});
	$("#pagination").on("click", "a", function(e){
		e.preventDefault();
		page = $(this).attr("href");
		getList();
	});
	$("#txtReply").keydown(function(key){
		if (key.keyCode == 13) {
			var reply = $("#txtReply").val().trim();
			if (reply.length == 0) {
				alert("내용을 입력하세요");
			} else {
				if (!confirm("등록?")) {
					return;
				} else {
					$.ajax({
						type : "post",
						url : "/reply/insert",
						data : {"bno" : bno, "reply" : reply, "replyer" : "guest"},
						success : function() {
							$("#txtReply").val("");
							getList();
						}
					});
				}
			}
		}
	});
	$("#divReply").on("click", "button", function(){
		var rno = $(this).parent().attr("rno");
		if(!confirm("삭제?")) {
			return;	
		} else {
			$.ajax({
				type : "post",
				url : "/reply/delete",
				data : {"rno" : rno},
				success : function() {
					getList();
				}
			});
		}
	});
</script>
</html>