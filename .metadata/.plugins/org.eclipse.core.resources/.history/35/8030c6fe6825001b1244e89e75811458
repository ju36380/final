<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<script src="http://code.jquery.com/jquery-1.9.1.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/3.0.1/handlebars.js"></script>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>msg</title>
</head>
<body>
	<h1>메세지 작성</h1>
	<table border = 1>
		<tr>
			<td width = 100>보내는 사람</td>
			<td width = 500>${vo.id } : ${vo.name } / 포인트 : <span id = "point">${vo.point }</span>p</td>
		</tr>
		<tr>
			<td width = 100>받는사람</td>
			<td>
			<select id = "receiver">
				<c:forEach items = "${list }" var = "vvo">
				 	<c:if test="${vvo.id != vo.id }">
				 		<option value = "${vvo.id }">${vvo.name }</option>
				 	</c:if>
				</c:forEach>
			</select>
			</td>
		</tr>
		<tr>
			<td width = 100>내용</td>
			<td><textarea rows="10" cols="68" id = "message"></textarea></td>
		</tr>
	</table>
	<button id = "btnSend">보내기</button>
	<button onClick = "location.href='list'">목록으로</button>
	<hr>
	<h1>${vo.name }의 보낸메세지</h1>
	<table id = "tbl" border = 1></table>
	<script id = "temp" type="text/x-handlebars-template">
		<tr>
			<td width = 100>받은사람</td>
			<td width = 200>보낸 날짜</td>
			<td width = 100>수신 여부</td>
			<td width = 600>내용</td>
			<td width = 70>삭제</td>
		</tr>
		{{#each .}}
			<tr class = "row">
				<td>{{receiver}} : {{name}}</td>
				<td>{{sendDate}}</td>
				<td>{{check date}}</td>
				<td>{{message}}</td>
				<td><button num = {{num}}>삭제</button></td>
			</tr>
		{{/each}}
	</script>
	<script>
		Handlebars.registerHelper("check", function(date){
			return !date ? "x" : "o";
		});
	</script>	
</body>
<script>
	var sender = "${vo.id}";
	getUser();
	$("#btnSend").on("click", function(){
		if (!confirm("전송?")){
			return;
		} else {
			var receiver = $("#receiver").val();
			var message = $("#message").val();
			if (message.trim().length == 0){
				alert("내용 입력");
			} else {
				$.ajax({
					type : "post",
					url : "insert",
					data : {"sender" : sender, "receiver" : receiver, "message" : message},
					success : function() {
						alert("메세지 전송 완료");
						getSendList();
					}
				});		
			}
		}
	});
	getSendList();
	function getSendList() {
		$.ajax({
			type : "get",
			url : "sendList",
			data : {"sender" : sender},
			dataType : "json",
			success : function(data) {
				var temp = Handlebars.compile($("#temp").html());
				$("#tbl").html(temp(data));
			}
		});
	}
	$("#tbl").on("click", ".row button", function(){
		var num = $(this).attr("num");
		if (!confirm("삭제?")){
			return;
		} else {
			$.ajax({
				type : "post",
				url : "delete",
				data : {"num" : num},
				success : function(){
					alert("삭제 완료");
					getSendList();
				}
			});
		}
	});
	function getUser() {
		$.ajax({
			type : "get",
			url : "read",
			data : {"id" : sender},
			dataType : "json",
			success : function(data) {
				$("#point").html(data.point);
			}
		});
	}
</script>
</html>